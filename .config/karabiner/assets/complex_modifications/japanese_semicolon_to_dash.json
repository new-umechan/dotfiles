{
    "title": "Convert ; to ー when typing in Japanese",
    "rules": [
        {
            "description": "Change ; to ー in Japanese input mode",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "semicolon"
                    },
                    "to": [
                        {
                            "key_code": "hyphen"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "input_source_if",
                            "input_sources": [
                                {
                                    "language": "ja"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
